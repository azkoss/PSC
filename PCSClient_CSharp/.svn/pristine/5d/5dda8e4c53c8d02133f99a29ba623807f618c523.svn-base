using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Zebone.Services
{
    /// <summary>
    /// 服务配置接口
    /// </summary>
    public interface IServiceConfig
    {
        /// <summary>
        /// 是否抑制错误信息
        /// </summary>
        bool SuppressError { get; set; }

        /// <summary>
        /// 服务调用错误时，是否抛出异常到调用端
        /// </summary>
        bool ThrowException { get; set; }
    }
}
