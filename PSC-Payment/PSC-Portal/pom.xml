	<build>
		<finalName>ROOT</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<!--可以在此配置过滤文件 -->
				<includes>
					<include>**/*.*</include>
					<include>apiclient_cert.p12</include>
				</includes>
				<filtering>true</filtering>
			</resource>
		</resources>


		<plugins>
			<!-- 推荐使用jetty -->
			<plugin>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<configuration>
					<webAppConfig>
						<contextPath>/</contextPath>
					</webAppConfig>
					<httpConnector>
						<port>8083</port>
					</httpConnector>
				</configuration>
			</plugin>

		</plugins>

	</build>

	<profiles>
		<!-- 开发使用 -->
		<profile>
			<id>dev</id>
			<properties>
				<!-- 支付平台URL -->
				<psc.payment.url>http://zhaihl.free.idcfengye.com</psc.payment.url>
				<!-- 账户中心 URL -->
				<psc.account.url>http://zhaihl.free.idcfengye.com</psc.account.url>
				<pom.log.file>../logs/tcs.log</pom.log.file>
				<pom.log.level>debug</pom.log.level>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
	</profiles>

</project>
